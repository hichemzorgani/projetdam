<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Modifier la taille du texte du titre de la barre d'action -->
        <item name="android:actionBarSize">45dp</item> <!-- Modifier la taille de la barre d'action -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>
    <!-- Hospital Theme -->
    <style name="HospitalTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize action bar colors for hospital theme -->
        <item name="android:actionBarSize">45dp</item>
        <item name="android:actionBarStyle">@style/HospitalActionBar</item>
        <item name="android:background">#00FF00</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <!-- Déplacer l'icône vers la gauche -->
        <item name="android:contentInsetStart">5dp</item> <!-- Ajuster la marge de l'icône -->
        <!-- Modifier la taille du texte du titre -->
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>
    <style name="HospitalActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:contentInsetStart">5dp</item>
        <item name="android:titleTextStyle">@style/HospitalActionBarTitleText</item>
    </style>

    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <!-- Modifier la taille du texte du titre -->
        <item name="android:textSize">10sp</item>
    </style>
    <style name="HospitalActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <!-- Customize title text size -->
        <item name="android:textSize">14sp</item>
        <!-- Customize title text color -->
         <!-- White color for hospital theme -->
    </style>
</resources>